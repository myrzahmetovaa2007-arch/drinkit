generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"            // можно postgres если хочешь
  url      = "file:./dev.db"
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String   @unique
  password      String
  emailVerified DateTime?
  createdAt     DateTime @default(now())
}
